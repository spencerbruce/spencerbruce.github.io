<script src="<%- theme.siema %>"></script>
<script>
  const desc = <%- JSON.stringify(theme.coverimages) %>;
    const mySiema = new Siema({
      selector: "<%- theme.carousel.selector %>",
      duration: parseInt("<%- theme.carousel.duration %>"),
      easing: "<%- theme.carousel.easing %>",
      perPage: parseInt("<%- theme.carousel.perPage %>"),
      startIndex: parseInt("<%- theme.carousel.startIndex %>"),
      draggable: "<%- theme.carousel.draggable %>" == 'true',
      multipleDrag: "<%- theme.carousel.multipleDrag %>" == 'true',
      threshold: parseInt("<%- theme.carousel.threshold %>"),
      loop: "<%- theme.carousel.loop %>" == 'true',
      rtl: false,
      onInit: () => {},
      onChange: () => {
        document.getElementById("carousel-desc").innerHTML = desc[mySiema.currentSlide]["description"];
      },
    });
    setInterval(() => mySiema.next(), parseInt("<%- theme.carousel.timer %>"),);
    // document.querySelector('.prev').addEventListener('click', () => mySiema.prev());
    // document.querySelector('.next').addEventListener('click', () => mySiema.next())
</script>